#include <stdio.h>

int main() {
    int opcao;

    printf("Escolha uma opção:\n");
    printf("1 - Iniciar\n");
    printf("2 - Configurações\n");
    printf("3 - Sair\n");
    scanf("%d", &opcao);

    switch (opcao) {
        case 1:
            printf("Iniciando o programa...\n");
            break;
        case 2:
            printf("Abrindo configurações...\n");
            break;
        case 3:
            printf("Saindo do programa...\n");
            break;
        default:
            printf("Opção inválida! Escolha entre 1 e 3.\n");
    }

    return 0;
}
